<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.campos.david.appointments.AppointmentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <include
        layout="@layout/no_elements"
        android:id="@+id/on_list_empty" />

    <com.campos.david.appointments.PersonalizedRecyclerView
        android:id="@+id/appointment_list"
        app:layoutManager="LinearLayoutManager"
        tools:context=".activityMain.AppointmentListFragment"
        tools:listitem="@layout/fragment_appointment"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
</LinearLayout>
