<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingLeft="4dp"
    android:paddingStart="4dp"
    android:paddingRight="4dp"
    android:paddingEnd="4dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="@dimen/appointment_type_icon_side"
        android:layout_height="@dimen/appointment_type_icon_side"
        android:id="@+id/iv_typeIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        android:layout_marginRight="@dimen/appbar_padding_top"
        android:layout_marginEnd="@dimen/appbar_padding_top"
        android:contentDescription="@string/appointment_type_icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_typeIcon"
        android:layout_toRightOf="@+id/iv_typeIcon" />

    <TextView
        android:id="@+id/tv_proposalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimarySmooth"
        android:layout_toEndOf="@+id/iv_typeIcon"
        android:layout_toRightOf="@+id/iv_typeIcon"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/tv_title"
         />

    <TextView
        android:id="@+id/tv_withInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimarySmooth"
        android:layout_toEndOf="@+id/iv_typeIcon"
        android:layout_toRightOf="@+id/iv_typeIcon"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/tv_proposalInfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_usersAppointment"
        android:src="@drawable/ic_bookmark_border"
        android:tint="@color/colorPrimary"
        android:layout_alignTop="@+id/tv_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/this_indicates_the_appointment_is_yours" />

</RelativeLayout>
